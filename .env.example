# Configuración de variables de entorno para SistemaAprodmayo
# Copie este archivo como .env y configure los valores apropiados para su entorno

# Configuración de Django
SECRET_KEY=django-insecure-cambie-esta-clave-por-una-nueva-y-segura
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,su-dominio.com

# Configuración de Base de Datos
DB_NAME=aprodmayo
DB_USER=postgres
DB_PASSWORD=su-contraseña-segura
DB_HOST=localhost
DB_PORT=5432

# Configuración de Email (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=su-email@gmail.com
EMAIL_HOST_PASSWORD=su-contraseña-de-aplicacion

# Configuración de archivos estáticos y media (para producción)
STATIC_ROOT=/path/to/static/files/
MEDIA_ROOT=/path/to/media/files/